{
  "name": "formact",
  "version": "0.10.0",
  "description": "A React Set of Form Components with Context",
  "main": "lib/index.js",
  "scripts": {
    "build:clean": "del lib",
    "build:compile": "babel src --out-dir lib",
    "build:flow": "flow-copy-source src lib",
    "build:types": "cp ./lib/types.js.flow ./types.js",
    "build": "npm run build:clean && npm run build:compile && npm run build:flow && npm run build:types",
    "flow": "yarn build && flow",
    "lint": "eslint ./src",
    "jest": "jest",
    "coverage": "jest --coverage",
    "test": "npm run lint && npm run flow && npm run jest",
    "start": "npm test && npm run build",
    "prepublishOnly": "npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogoperillo/formact.git"
  },
  "keywords": ["react", "form", "input"],
  "author": "Diogo Perillo <diogo.perillo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/diogoperillo/formact/issues"
  },
  "homepage": "https://github.com/diogoperillo/formact#readme",
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "del-cli": "^1.1.0",
    "enzyme": "^2.9.1",
    "eslint": "^4.2.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "flow-bin": "^0.49.1",
    "flow-copy-source": "^1.2.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage/"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.2.1"
  }
}
